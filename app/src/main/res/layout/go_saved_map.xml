<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--fragment to display our maps-->
    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapSavedRoute"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="150dp"
        tools:context=".goToSavedMap" />

    <ProgressBar
        android:id="@+id/progressBarSavedRouteMap"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/blue"
        android:layout_marginTop="350dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvDistanceSaved"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="20dp"
        android:text="Distance to Destination"
        android:textSize="11pt"
        android:textStyle="bold"
        android:layout_below="@+id/mapSavedRoute"/>

    <TextView
        android:id="@+id/tvTimeSaved"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-136dp"
        android:layout_marginBottom="25dp"
        android:text="Time to Destination"
        android:textSize="11pt"
        android:textStyle="bold"
        android:layout_below="@+id/tvDistanceSaved"/>

</RelativeLayout>